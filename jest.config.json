{
  "transform": {
    "^.+\\.vue$": "@vue/vue3-jest",
    "^.+\\.js$": "babel-jest"
  },
  "testMatch": [
    "**/tests/**/*.spec.[jt]s?(x)"
  ],
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json",
    "vue"
  ],
  "moduleNameMapper": {
    "^@components/(.*)$": "<rootDir>/src/components/$1", 
    "^@views(.*)$": "<rootDir>/src/views/$1",
    "^@vue/test-utils": "<rootDir>/node_modules/@vue/test-utils/dist/vue-test-utils.cjs.js"
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{js,vue}"
  ],
  "testEnvironment": "jsdom"
} 